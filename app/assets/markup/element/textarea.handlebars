<textarea
    {{#if this.id}}
    id="{{this.id}}"
    {{/if}}
    {{#if this.class}}
    class="{{this.class}}"
    {{/if}}
    {{#if this.placeholder}}
    placeholder="{{this.placeholder}}"{{/if}}
    {{#if this.name}}
    name="{{this.name}}"
    {{/if}}
    {{#if this.required}}
    required
    aria-required="true"
    {{/if}}
    {{#if this.disabled}}
    disabled
    aria-disabled="true"
    {{/if}}
>{{#if this.value}}{{this.value}}{{/if}}</textarea>