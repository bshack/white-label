<input
    {{#if this.id}}
    id="{{this.id}}"
    {{/if}}
    {{#if this.class}}
    class="{{this.class}}"
    {{/if}}
    {{#if this.placeholder}}
    placeholder="{{this.placeholder}}"
    {{/if}}
    value="{{this.value}}"
    {{#if this.type}}
    type="{{this.type}}"
    {{else}}
    type="text"
    {{/if}}
    {{#if this.name}}
    name="{{this.name}}"
    {{/if}}
    {{#if this.title}}
    title="{{this.title}}"
    {{/if}}
    {{#if this.required}}
    required
    aria-required="true"
    {{/if}}
    {{#if this.disabled}}
    disabled
    aria-disabled="true"
    {{/if}}
    {{#if this.checked}}
    checked
    {{/if}}
    {{#if this.data}}
    data-custom="{{this.data}}"
    {{/if}}
    {{#if this.labelledby}}
    aria-labelledby="{{this.labelledby}}"
    {{/if}}
>